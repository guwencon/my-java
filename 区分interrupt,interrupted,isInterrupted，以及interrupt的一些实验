test 3
public static void main(String[] args)
   {
	  Runnable r=()->
	  {
		  int i=0;
		 
			  while(i<50)
			  {
				  i++;
				  System.out.println("第 "+i+" 次运行,  "+"是否中断"+Thread.currentThread().isInterrupted());
				  if(Math.random()>0.5)
					 {
					  Thread.currentThread().interrupt();
					  System.out.println("第 "+i+" 次运行,interrupt被调用"+"是否中断"+Thread.currentThread().isInterrupted());
					 }
				  System.out.println("第"+i+"次运行interrupt后的程序被调用");
			  
		  }
		 
	  };
	  new Thread(r).start();
	 
	  
   }
   
